{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":rebaseStalePrs",
        ":semanticCommits",
        "docker:pinDigests",
        "workarounds:supportRedHatImageVersion"
    ],
    "rebaseWhen": "behind-base-branch",
    "automergeType": "pr",
    "platformAutomerge": true,
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "automerge": true
      }
    ]
  }
